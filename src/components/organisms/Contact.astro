<section class="z-20 relative py-12 md:py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold mb-8">お問い合わせ</h2>
    <div class="bg-opacity-50 backdrop-blur-md rounded-md p-8 relative">
      <div class="glass absolute top-0 left-0 w-full h-full"></div>
      <form class="relative z-10">
        <div class="mb-6">
          <label for="name" class="block text-gray-600 mb-2">お名前</label>
          <input
            id="name"
            type="text"
            class="w-full border border-gray-300 rounded-md p-2 bg-transparent"
            required
          />
        </div>
        <div class="mb-6">
          <label for="email" class="block text-gray-600 mb-2"
            >メールアドレス</label
          >
          <input
            id="email"
            type="email"
            class="w-full border border-gray-300 rounded-md p-2 bg-transparent"
            required
          />
        </div>
        <div class="mb-6">
          <label for="message" class="block text-gray-600 mb-2"
            >お問い合わせ内容</label
          >
          <textarea
            id="message"
            rows="6"
            class="w-full border border-gray-300 rounded-md p-2 bg-transparent"
            required></textarea>
        </div>
        <button type="submit" class="py-3 px-6 rounded-md bg-accent text-white"
          >送信</button
        >
      </form>
    </div>
  </div>
</section>
